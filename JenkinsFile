pipeline{
    agent any
    stages{
        stage('checkout'){
            steps{
                git branch: 'main', changelog: false, credentialsId: 'Github', poll: false, url: 'https://github.com/Varunkumar2698/Amazon-Jenkins.git'
            }
        }
        stage('build'){
            steps{
                sh 'mvn clean package'
            }
        } 
        stage('test'){
            steps{
                sh 'mvn test'
            }
        }  
        stage('artifact archive'){
            steps{
                archiveArtifacts artifacts: '**/target/*.jar'
            }
        }
    }
}
